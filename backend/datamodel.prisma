type User {
  id: ID! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  upstream_id: Int! @unique
  first_name: String
  last_name: String
  email: String!
  administrator: Boolean!
  slot: Slot
  essays: [Essay!]
}

type Slot {
  id: ID! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  capacity: Int!
  registered: [User!]
  starts_at: DateTime!
  ends_at: DateTime!
}

type Essay {
  id: ID! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  text: String!
  author: User!
  topic: EssayTopic!
}

type EssayTopic {
  id: ID! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  title: String!
  description: String!
  min_words: Int!
  max_words: Int!
}
